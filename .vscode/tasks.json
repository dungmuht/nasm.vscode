{
    "version": "2.0.0",
    "tasks": [
        {
          "label": "nasm",
          "type": "shell",
          "command": "nasm",
          "args": [
              "-g",
              "-f",
              "dwarf",
              "-f",
              "elf64",
              "-i",
              "${fileDirname}",
              "-o",
              "${fileDirname}\\${fileBasenameNoExtension}.o",
              "${file};",
              "gcc",
              "-m64",
              "-g",
              "-o",
              "${fileDirname}\\${fileBasenameNoExtension}.exe",
              "${fileDirname}\\${fileBasenameNoExtension}.o"
          ],
          "problemMatcher": {
              "pattern": {
                "regexp": "error"
              }
            },
          "presentation": {
              "focus": true,
              "panel": "dedicated",
              "reveal": "silent",
              "clear": true
          }
        },
        {
          "label": "nasmWin",
          "type": "shell",
          "command": "nasm",
          "args": [
              "-g",
              "-f",
              "cv8",
              "-f",
              "win64",
              "-i",
              "${fileDirname}",
              "-o",
              "${fileDirname}\\${fileBasenameNoExtension}.o",
              "${file};",
              "gcc",
              "-m64",
              "-g",
              "-o",
              "${fileDirname}\\${fileBasenameNoExtension}.exe",
              "${fileDirname}\\${fileBasenameNoExtension}.o"
          ],
          "problemMatcher": {
              "pattern": {
                "regexp": "error"
              }
            },
          "presentation": {
              "focus": true,
              "panel": "dedicated",
              "reveal": "silent",
              "clear": true
          }
        }
    ]
}
